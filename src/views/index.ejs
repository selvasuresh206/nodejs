<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles.css">
  <title>My Blog</title>
</head>
<body>
  <div class="container">
    <h1>My Blog Posts</h1>
    <a href="/add-post"><button>Add New Post</button></a>
    <div>
      <% posts.forEach(post => { %>
        <div class="post">
          <h2><%= post.title %></h2>
          <p><%= post.content %></p>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
